<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nav_container"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">
                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@android:drawable/ic_menu_revert"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="My Profile"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:padding="5dp"
                android:src="@drawable/ic_launcher_foreground"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/CircleImage"
                app:strokeColor="@color/purple_200"
                app:strokeWidth="3dp"
                android:layout_marginBottom="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose your Avatar"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="15dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="25dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/av1"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_user_1"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="@color/purple_200"
                    app:strokeWidth="2dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/av2"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_user_2"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="@color/purple_200"
                    app:strokeWidth="2dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/av3"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_user_3"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="@color/purple_200"
                    app:strokeWidth="2dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/av4"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_user_4"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/CircleImage"
                    app:strokeColor="@color/purple_200"
                    app:strokeWidth="2dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etProfileEmail"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/card_bg"
                android:padding="15dp"
                android:textColor="#888888"
                android:enabled="false"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginBottom="8dp"/>
            <EditText
                android:id="@+id/etProfileName"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/card_bg"
                android:hint="Enter your name"
                android:textColor="@color/white"
                android:padding="15dp"
                android:layout_marginBottom="20dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdateProfile"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Update Profile"
                app:cornerRadius="12dp"
                android:backgroundTint="#00E676"
                android:textStyle="bold"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetPass"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Reset Password"
                app:cornerRadius="12dp"
                android:textColor="@color/purple_200"
                app:strokeColor="@color/purple_200"
                android:layout_marginTop="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAdminPanel"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Organizer Dashboard"
                android:backgroundTint="#FF9800"
                android:visibility="gone"
                app:cornerRadius="12dp"
                android:layout_marginTop="12dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:text="Logout"
                android:backgroundTint="#FF3D00"
                app:cornerRadius="12dp"
                android:layout_marginBottom="40dp"/>

        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/nav_container"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginBottom="15dp"
        app:cardBackgroundColor="#252525"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp">
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            app:elevation="0dp"
            app:itemIconSize="24dp"
            app:itemIconTint="@color/purple_200"
            app:itemTextColor="@color/white"
            app:labelVisibilityMode="labeled"
            app:menu="@menu/bottom_nav_menu" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>
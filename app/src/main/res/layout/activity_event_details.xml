<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_bg"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgEventDetail"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Name"
                android:textColor="@color/white"
                android:textSize="26sp"
                android:textStyle="bold"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tvDetailPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: â‚¹ 999 onwards"
                android:textColor="#00E676"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="15dp"/>

            <TextView
                android:id="@+id/tvDetailDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“… Date | Time"
                android:textColor="#FF9800"
                android:textSize="16sp"
                android:layout_marginBottom="5dp"/>

            <TextView
                android:id="@+id/tvDetailLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Location"
                android:textColor="#AAAAAA"
                android:textSize="16sp"
                android:layout_marginBottom="30dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="10dp">

                <Button
                    android:id="@+id/btnContactOrg"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:text="Contact Org"
                    android:backgroundTint="#2196F3"
                    android:textColor="@color/white"
                    android:layout_marginEnd="10dp"/>

                <Button
                    android:id="@+id/btnBookEvent"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="60dp"
                    android:text="Book Now"
                    android:backgroundTint="#FF3D00"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/btnBackDetail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Back"
                android:backgroundTint="#333333"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>